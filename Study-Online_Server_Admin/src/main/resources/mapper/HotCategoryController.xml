<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jd.mapper.HotCategoryMapper">
    <update id="updateNameById" parameterType="com.jd.entity.HotCategory">
        update hot_category
        set name = #{name}
        where id = #{id}
    </update>
</mapper>